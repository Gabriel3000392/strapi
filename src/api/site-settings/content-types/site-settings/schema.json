{
  "kind": "singleType",
  "collectionName": "site_settings1",
  "info": {
    "singularName": "site-settings",
    "pluralName": "site-settings1",
    "displayName": "Site Settings"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "site_name": {
      "type": "string",
      "required": true
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "contact_email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string"
    },
    "address": {
      "type": "string",
      "required": true
    },
    "maps_link": {
      "type": "string",
      "required": true
    },
    "network": {
      "type": "enumeration",
      "enum": [
        "facebook",
        "instagram"
      ]
    },
    "url": {
      "type": "string",
      "regex": "^https?:\\/\\/[^\\s]+$"
    }
  }
}
